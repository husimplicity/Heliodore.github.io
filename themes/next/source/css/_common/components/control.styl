.control-gear {
    border-radius: 15px;
    position: fixed;
    top: 10px;
    right: 15px;
    background: #BFBFDF;
    box-sizing: border-box;
    color: black;
    opacity: 1;
    padding: 0 6px;
    z-index: $zindex-3; // block前置
//   +tablet-mobile() {
//     left: $b2t-position-right-mobile;
//     opacity: $b2t-opacity-hover;
//   }
}
.control-gear:hover {
    color: indianred;
}
.control-gear:active {
    color: white;
}

.control-menu {
    position: fixed;
    top: 45px;
    right: 15px;
    background: #AAAACA;
    border-radius: 15px;
    visibility: hidden;
    padding: 0 10px;
    z-index: $zindex-3; // block前置
    box-sizing: border-box;
    ul {
        padding-inline-start: 0px;
        margin-block-start: 0em;
        margin-block-end: 0em;
    }
}

.control-menu-list li {
    display: inline;
    font-size: 20px;
}
